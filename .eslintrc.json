{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": "off",
		"quotes": ["error", "single"],
		"no-trailing-spaces": "error",
        "semi": ["error", "always"],
        "padded-blocks": [2, {
            "blocks": "never",
            "classes": "always",
            "switches": "never"
        }],
        "@typescript-eslint/semi": "off",
        "@typescript-eslint/indent": ["error", 2]
    }
}
